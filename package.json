{
  "name": "minhtran-site",
  "version": "4.0.0",
  "private": true,
  "description": "Professional portfolio website built with Next.js and Tailwind CSS",
  "author": "Minh Tran",
  "license": "MIT",
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format": "bun run prettier:fix",
    "check": "bun run prettier",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out dist",
    "preview": "next build && next start",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.18.0",
    "bun": ">=1.1.0"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@ai-sdk/cohere": "^2.0.22",
    "@ai-sdk/rsc": "^1.0.120",
    "@apollo/client": "^4.0.11",
    "@plaiceholder/next": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@umami/api-client": "^0.80.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "ai": "^5.0.118",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "daisyui": "^5.5.14",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "entities": "^7.0.0",
    "leaflet": "^1.9.4",
    "leaflet-defaulticon-compatibility": "^0.1.2",
    "next": "16.1.1",
    "next-share": "^0.27.0",
    "plaiceholder": "^3.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-leaflet": "^5.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "reading-time": "^1.5.0",
    "recharts": "^3.6.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "theme-change": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@next/bundle-analyzer": "16.1.1",
    "@next/eslint-plugin-next": "16.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/leaflet": "^1.9.21",
    "autoprefixer": "^10.4.23",
    "conventional-changelog-atom": "^5.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
  },
  "browserslist": "> 1%",
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix",
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
