{
  "name": "minhtran-site",
  "version": "4.0.0",
  "private": true,
  "description": "Professional portfolio website built with Next.js and Tailwind CSS",
  "author": "Minh Tran",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NEXT_TURBOPACK_TRACING=1 next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format": "bun run prettier:fix",
    "check": "bun run prettier",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out dist",
    "preview": "next build && next start",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.18.0",
    "bun": ">=1.1.0"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@ai-sdk/cohere": "^2.0.14",
    "@ai-sdk/rsc": "^1.0.77",
    "@apollo/client": "^3.13.8",
    "@plaiceholder/next": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@umami/api-client": "^0.80.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "ai": "^5.0.77",
    "axios": "^1.12.2",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "clsx": "^2.1.0",
    "daisyui": "^5.3.8",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "jsdom": "^26.1.0",
    "next": "16.0.0",
    "next-share": "^0.27.0",
    "plaiceholder": "^3.0.0",
    "react": "19.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.2.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "reading-time": "^1.5.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "sharp": "^0.34.4",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.2.1",
    "theme-change": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@next/bundle-analyzer": "16.0.0",
    "@next/eslint-plugin-next": "16.0.0",
    "@tailwindcss/typography": "^0.0.0-insiders.0339c42",
    "autoprefixer": "^10.4.17",
    "conventional-changelog-atom": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5"
  },
  "browserslist": "> 1%",
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix",
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
